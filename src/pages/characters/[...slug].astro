---
import EffectTooltip from "@components/EffectTooltip.astro";
import MarkdownHighlight from "@components/MarkdownHighlight.astro";
import MarkdownLayout from "@layouts/MarkdownLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const characterEntries = await getCollection("characters");
  return characterEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<MarkdownLayout title={`${entry.data.title} | Character`}>
  <Content components={{ abbr: MarkdownHighlight, effect: EffectTooltip }} />
</MarkdownLayout>
